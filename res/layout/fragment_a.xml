<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    	
        <LinearLayout
        android:id="@+id/LayoutTop" 
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent"
    	android:orientation="horizontal">
    	
		    <LinearLayout
		        android:id="@+id/LayoutMovements"
		        android:layout_width="wrap_content"
		        android:layout_height="fill_parent"
		        android:layout_marginTop="10dp"
		        android:layout_weight="0.16"
		        android:gravity="center"
		        android:orientation="horizontal" >

		        <LinearLayout
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:layout_weight="0.12"
		            android:gravity="center"
		            android:orientation="vertical"
		            android:text="RED" >

					        <LinearLayout
					            android:layout_width="fill_parent"
					            android:layout_height="wrap_content"
					            android:layout_weight="0.12"
					            android:gravity="center"
					            android:orientation="vertical"
					            android:text="RED" >
					            
						        <ImageButton
						            android:id="@+id/btnNaoFwd"
						            android:layout_width="75dp"
						            android:layout_height="75dp"
						            android:scaleType="fitXY"
						            android:src="@drawable/up" />
					            
						   </LinearLayout>
					            
					        <LinearLayout
					            android:layout_width="fill_parent"
					            android:layout_height="wrap_content"
					            android:layout_weight="0.12"
					            android:gravity="center"
					            android:orientation="horizontal"
					            android:text="RED" >
					                
								        <LinearLayout
								            android:layout_width="fill_parent"
								            android:layout_height="wrap_content"
								            android:layout_weight="0.12"
								            android:gravity="center"
								            android:orientation="horizontal"
								            android:text="RED" >
								            
								        <ImageButton
								            android:id="@+id/btnNaoLeft"
								            android:layout_width="80dp"
								            android:layout_height="75dp"
								            android:scaleType="fitXY"
								            android:src="@drawable/left" />
								            
										</LinearLayout>
										
								        <LinearLayout
								            android:layout_width="fill_parent"
								            android:layout_height="wrap_content"
								            android:layout_weight="0.12"
								            android:gravity="center"
								            android:orientation="horizontal"
								            android:text="RED" >
								            					                
									        <ImageButton
									            android:id="@+id/btnNaoRight"
									            android:layout_width="75dp"
									            android:layout_height="75dp"
									            android:scaleType="fitXY"
									            android:src="@drawable/right" />
								                
										</LinearLayout>
					            
							</LinearLayout>
					            
					        <LinearLayout
					            android:layout_width="fill_parent"
					            android:layout_height="wrap_content"
					            android:layout_weight="0.12"
					            android:gravity="center"
					            android:orientation="vertical"
					            android:text="RED" >
					            	 
						        <ImageButton
						            android:id="@+id/btnNaoBwd"
						            android:layout_width="80dp"
						            android:layout_height="75dp"
						            android:scaleType="fitXY"
						            android:src="@drawable/back" />
					            
					         </LinearLayout>

							<LinearLayout
					            android:layout_width="fill_parent"
					            android:layout_height="wrap_content"
					            android:layout_weight="0.12"
					            android:gravity="center"
					            android:orientation="horizontal"
					            android:text="RED" >
					                
								        <LinearLayout
								            android:layout_width="fill_parent"
								            android:layout_height="wrap_content"
								            android:layout_weight="0.12"
								            android:gravity="center"
								            android:orientation="horizontal"
								            android:text="RED" >
								            
								        <ImageButton
								            android:id="@+id/btnNaoRotateL"
								            android:layout_width="80dp"
								            android:layout_height="75dp"
								            android:scaleType="fitXY"
								            android:src="@drawable/left" />
 
										</LinearLayout>
										
								        <LinearLayout
								            android:layout_width="fill_parent"
								            android:layout_height="wrap_content"
								            android:layout_weight="0.12"
								            android:gravity="center"
								            android:orientation="horizontal"
								            android:text="RED" >
								            					                
								        <ImageButton
								            android:id="@+id/btnNaoRotateR"
								            android:layout_width="75dp"
								            android:layout_height="75dp"
								            android:scaleType="fitXY"
								            android:src="@drawable/right" />

										</LinearLayout>
										             
							</LinearLayout>
							
									    <LinearLayout
								            android:layout_width="fill_parent"
								            android:layout_height="90dp"
								            android:layout_weight="0.12"
								            android:gravity="center"
								            android:orientation="horizontal"
								            android:text="RED" >
								            					                
								        <Button
								            android:id="@+id/btnStartButtons"
								            android:layout_width="wrap_content"
								            android:layout_height="wrap_content"
								            android:text="Control Buttons" />
								        
								        <Button
								            android:id="@+id/btnStopButtons"
								            android:layout_width="wrap_content"
								            android:layout_height="wrap_content"
								            android:text="Stop Buttons" />

										</LinearLayout>
										
									    <LinearLayout
								            android:layout_width="fill_parent"
								            android:layout_height="40dp"
								            android:layout_weight="0.12"
								            android:gravity="center"
								            android:orientation="horizontal"
								            android:text="RED" >
								            					                
									    <TextView
									        android:id="@+id/txtBtnControlStatus"
									        android:text="Buttons control:"
									        android:layout_width="wrap_content"
									        android:layout_height="wrap_content"
									        android:gravity="left"
									        android:textColor="@android:color/white">
									        
									    </TextView>
									    
									   <TextView
									        android:id="@+id/txtBtnControlONOFF"
									        android:text=""
									        android:layout_width="wrap_content"
									        android:layout_height="wrap_content"
									        android:gravity="left"
									        android:textColor="@android:color/white" >
									        
									    </TextView>

										</LinearLayout>
					        
		        </LinearLayout>
		        
		    </LinearLayout>
		    
		    <LinearLayout
		        android:id="@+id/LayoutNaoImageView"
		        android:layout_width="266dp"
		        android:layout_height="fill_parent"
		        android:gravity="center"
		        android:orientation="horizontal" >

		        <ImageView
		            android:id="@+id/imageView1"
		            android:layout_width="300dp"
		            android:layout_height="300dp"
		            android:scaleType="fitXY"
		            android:src="@drawable/nao" />
		        
		    </LinearLayout>
		    
		    <LinearLayout 
		        android:id="@+id/LayoutJoystick"
		        android:layout_height="fill_parent"
		        android:layout_width="wrap_content"
		        android:orientation="vertical"
		        android:layout_weight=".15"
		        android:gravity="center">
		        
		         <LinearLayout
		             android:layout_width="match_parent"
		             android:layout_height="wrap_content"
		             android:orientation="vertical" >
									    
			             <RelativeLayout
					        android:id="@+id/layout_joystick"
					        android:layout_width="200dp"
					        android:layout_height="200dp"
					        android:layout_alignParentRight="true"
					        android:layout_centerVertical="true"
					        android:layout_marginLeft="90dp"
					        android:background="@drawable/image_button_bg" >
					    </RelativeLayout>
									    
				        <TextView
				            android:id="@+id/textViewJoystick1"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:layout_marginLeft="10dp"
				            android:text="X"
				            android:textColor="@android:color/white"
				            android:textSize="20dp" />
				        <TextView
				            android:id="@+id/textViewJoystick2"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:layout_marginLeft="10dp"
				            android:text="Y"
				            android:textColor="@android:color/white"
				            android:textSize="20dp" />
				        <TextView
				            android:id="@+id/textViewJoystick3"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:layout_marginLeft="10dp"
				            android:text="Angle"
				            android:textColor="@android:color/white"
				            android:textSize="20dp" />
				        <TextView
				            android:id="@+id/textViewJoystick4"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:layout_marginLeft="10dp"
				            android:text="Distance"
				            android:textColor="@android:color/white"
				            android:textSize="20dp" />
				        <TextView
				            android:id="@+id/textViewJoystick5"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:layout_marginLeft="10dp"
				            android:text="Direction"
				            android:textColor="@android:color/white"
				            android:textSize="20dp" />
				        
				    </LinearLayout>
		        
		    </LinearLayout>

    </LinearLayout>

</RelativeLayout>
